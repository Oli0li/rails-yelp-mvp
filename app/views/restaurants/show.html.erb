<div class="container">
  <h1><%= @restaurant.name %></h1>

  <ul>
    <li>
      <strong>Category:</strong> <%= @restaurant.category.capitalize %>
    </li>
    <li>
      <strong>Address:</strong> <%= @restaurant.address %>
    </li>
    <li>
      <strong>Contact us:</strong> <%= @restaurant.phone_number %>
    </li>
  </ul>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <span>
          Rating: <%= review.rating %>
        </span>
        <p>
          <%= review.content %>
        </p>
      </li>
    <% end %>
  </ul>

  <h3>Add a review for <%= @restaurant.name %></h3>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, as: :select, collection: (0..5), prompt: 'Rate your experience', error: 'Please select a number for your rating.' %>
    <%= f.input :content, error: 'Please add a comment.' %>
    <%= f.submit %>
  <% end %>

  <br>

  <%= link_to "Back to restaurant list", restaurants_path, class:"btn btn-primary" %>
</div>
