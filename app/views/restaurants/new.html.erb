<div class="container">
  <h1>Add a new restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name, error: 'Name is mandatory, please specify one' %>
    <%= f.input :address, error: 'Address is mandatory, please specify one' %>
    <%= f.input :phone_number %>
    <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES, prompt: 'Select category', error: 'Please select a category.' %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to restaurant list", restaurants_path %>
</div>
