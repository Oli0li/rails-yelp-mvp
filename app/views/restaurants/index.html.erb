<div class="container">
<h1>Restaurant List</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <h3>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
    </h3>
  </li>
  <% end %>
</ul>

<%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
