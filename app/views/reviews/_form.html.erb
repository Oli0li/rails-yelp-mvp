    <%= simple_form_for [restaurant, review], data: { insert_in_list_target: "form", action: "submit->insert-in-list#send" } do |f| %>
      <%= f.input :rating, as: :select, collection: (0..5), prompt: 'Rate your experience', error: 'Please select a number for your rating.' %>
      <%= f.input :content, error: 'Please add a comment.' %>
      <%= f.submit "Add a review", class: "btn btn-primary mb-4" %>
    <% end %>
